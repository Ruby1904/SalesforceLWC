<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId"  access="global"
                controller="showContactCount">
    <aura:attribute name="contactCount" type="Object"/>
    <!--<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>-->
    <div>
        <lightning:button variant="brand" label="Get Contact Size" title="Brand action" value ="{!v.recordId}" onclick="{! c.handleClick }" />
       <div class="inputformat">
        <lightning:input type="text" value="{!v.contactCount}"/>
       </div>
    </div>
</aura:component>